#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="\
vcwc/confluent/kafka_rest/sasl,\
vcwc/nginx/rewrite"
export VCW_STACK_GLOBAL_STACKNAMES_PREVIOUS="\
vcw_stack_kafka_rest,\
vcw_stack_url_rewrite"
export VCW_STACK_GLOBAL_STACKNAMES="\
vcw_stack_kafka_rest,\
vcw_stack_kafka_rest_rest"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_kafka_rest"
export VCW_STACK_GLOBAL_RUNSTACKS="vcw_stack_kafka_rest_rest"
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx_config_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx_config_volume:/vcw/pwd"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_KAFKA_REST_PORTS,\
$VCW_STACK_KAFKA_REST_REST_ENVIRONMENT_CONF_PATH,\
$VCW_STACK_KAFKA_REST_REST_ENVIRONMENT_CONF_UPSTREAM,\
$VCW_STACK_KAFKA_REST_REST_COMPOSE_EXTENSIONS,\
$VCW_STACK_KAFKA_REST_MODULE_KAFKA_CONNECT_PORT,\
$VCW_STACK_KAFKA_REST_PORTS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_KAFKA_REST_PORTS=
export VCW_STACK_KAFKA_REST_REST_ENVIRONMENT_CONF_PATH="/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/rest"
export VCW_STACK_KAFKA_REST_REST_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_rest:8082"
export VCW_STACK_KAFKA_REST_REST_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,\
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx.loadbalancer.server.port=80,\
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx.entrypoints=conteco,\
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/rest\")]
${DOLLAR}{VCW_STACK_KAFKA_REST_REST_COMPOSE_EXTENSIONS}"
export VCW_STACK_KAFKA_REST_MODULE_KAFKA_REST_PORT=
export VCW_STACK_KAFKA_REST_PORTS=
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export VCW_STACK_KAFKA_REST_MODULE_KAFKA_REST_PORT="8082"
export VCW_STACK_KAFKA_REST_DEPLOY_MODE="replicated"
export VCW_STACK_KAFKA_REST_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export VCW_STACK_KAFKA_REST_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka.base
# START SETTINGS nginx.base
export VCW_STACK_KAFKA_REST_REST_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export VCW_STACK_KAFKA_REST_REST_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

