#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/confluent/kafka_rest/sasl"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_kafka_rest"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_kafka_rest"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST=""
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_KAFKA_REST_ENVIRONMENT,\
$VCW_STACK_KAFKA_REST_COMMAND,\
$VCW_STACK_KAFKA_REST_VOLUMES,\
$VCW_STACK_KAFKA_REST_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="kafka_rest"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/cp-kafka-rest"
export VCW_STACK_KAFKA_REST_ENVIRONMENT="\
'KAFKA_REST_HOST_NAME=kafka_rest',\
'KAFKA_REST_LISTENERS=http://0.0.0.0:8082',\
'KAFKA_REST_SCHEMA_REGISTRY_URL=http://schema_registry:8081',\
'KAFKA_REST_CLIENT_BASIC_AUTH_CREDENTIALS_SOURCE=${DOLLAR}{VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_BASIC_AUTH_CREDENTIALS_SOURCE}',\
'KAFKA_REST_CLIENT_SCHEMA_REGISTRY_BASIC_AUTH_USER_INFO=${DOLLAR}{VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_SCHEMA_REGISTRY_BASIC_AUTH_USER_INFO}',\
'KAFKA_REST_BOOTSTRAP_SERVERS=${DOLLAR}{VCW_STACK_KAFKA_REST_ENVIRONMENT_CLOUD_BOOTSTRAP_SERVERS}',\
'KAFKA_REST_SSL_ENDPOINT_IDENTIFIED_ALGORITHM=https',\
'KAFKA_REST_SECURITY_PROTOCOL=SASL_SSL',\
'KAFKA_REST_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username=\"${DOLLAR}{VCW_STACK_KAFKA_REST_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY}\" password=\"${DOLLAR}{VCW_STACK_KAFKA_REST_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET}\"',\
'KAFKA_REST_SASL_MECHANISM=PLAIN',\
'KAFKA_REST_CLIENT_BOOTSTRAP_SERVERS=${DOLLAR}{VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_CLOUD_BOOTSTRAP_SERVERS}',\
'KAFKA_REST_CLIENT_SSL_ENDPOINT_IDENTIFIED_ALGORITHM=https',\
'KAFKA_REST_CLIENT_SECURITY_PROTOCOL=SASL_SSL',\
'KAFKA_REST_CLIENT_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username=\"${DOLLAR}{VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY}\" password=\"${DOLLAR}{VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET}\";',\
'KAFKA_REST_CLIENT_SASL_MECHANISM=PLAIN'"
export VCW_STACK_KAFKA_REST_COMMAND=
export VCW_STACK_KAFKA_REST_VOLUMES=
export VCW_STACK_KAFKA_REST_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay"
export VCW_STACK_GLOBAL_VOLUMES=
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export VCW_STACK_KAFKA_REST_PORTS="8082:8082"
export VCW_STACK_KAFKA_REST_DEPLOY_MODE="replicated"
export VCW_STACK_KAFKA_REST_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export VCW_STACK_KAFKA_REST_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

# EXTERNAL ENVIRONMENT VARIABLES
# ==============================
# VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_BASIC_AUTH_CREDENTIALS_SOURCE
# VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_SCHEMA_REGISTRY_BASIC_AUTH_USER_INFO
# VCW_STACK_KAFKA_REST_ENVIRONMENT_CLOUD_BOOTSTRAP_SERVERS
# VCW_STACK_KAFKA_REST_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY
# VCW_STACK_KAFKA_REST_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET
# VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_CLOUD_BOOTSTRAP_SERVERS
# VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY
# VCW_STACK_KAFKA_REST_ENVIRONMENT_CLIENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET
