#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/confluent/server"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_kafka"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_kafka"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_secrets_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_data_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_KAFKA_ENVIRONMENT,\
$VCW_STACK_KAFKA_COMMAND,\
$VCW_STACK_KAFKA_VOLUMES,\
$VCW_STACK_KAFKA_NETWORKS,\
$VCW_STACK_KAFKA_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="kafka"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/cp-server"
export VCW_STACK_KAFKA_ENVIRONMENT="\
'KAFKA_HEAP_OPTS=-Xmx${DOLLAR}{VCW_STACK_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xms${DOLLAR}{VCW_STACK_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}',\
'KAFKA_BROKER_ID=1',\
'KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181',\
'KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092${DOLLAR}{VCW_STACK_KAFKA_KAFKA_ADVERTISED_LISTENERS}',\
'KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT${DOLLAR}{VCW_STACK_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP}',\
'KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT',\
'KAFKA_AUTO_CREATE_TOPICS_ENABLE=true',\
'KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1',\
'KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=0',\
'KAFKA_CONFLUENT_LICENSE_TOPIC_REPLICATION_FACTOR=1',\
'KAFKA_MIN_INSYNC_REPLICAS=1',\
'KAFKA_DEFAULT_REPLICATION_FACTOR=1',\
'KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1',\
'KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1',\
'KAFKA_METRIC_REPORTERS=io.confluent.metrics.reporter.ConfluentMetricsReporter',\
'CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS=kafka:9092',\
'CONFLUENT_METRICS_REPORTER_ZOOKEEPER_CONNECT=zookeeper:2181',\
'CONFLUENT_METRICS_REPORTER_TOPIC_REPLICAS=1',\
'CONFLUENT_METRICS_ENABLE=true',\
'CONFLUENT_SUPPORT_CUSTOMER_ID=anonymous',\
'KAFKA_LOG_RETENTION_HOURS=1', \
'KAFKA_LOG_CLEANER_ENABLE=true', \
'KAFKA_LOG_CLEANUP_POLICY=delete'"
export VCW_STACK_KAFKA_COMMAND=
export VCW_STACK_KAFKA_VOLUMES="\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_secrets_volume:/etc/kafka/secrets',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_data_volume:/var/lib/kafka/data'"
export VCW_STACK_KAFKA_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_KAFKA_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_VOLUMES="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_secrets_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_data_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export VCW_STACK_KAFKA_KAFKA_ADVERTISED_LISTENERS=",HOST://localhost:29092"
export VCW_STACK_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=",HOST:PLAINTEXT"
export VCW_STACK_KAFKA_MODULE_KAFKA_PORT="29092"
export VCW_STACK_KAFKA_PORTS="${VCW_STACK_KAFKA_MODULE_KAFKA_PORT}:29092"
export VCW_STACK_KAFKA_DEPLOY_RESOURCES_LIMITS_MEMORY="1536m"
export VCW_STACK_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="1024m"
# END SETTINGS kafka.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
