#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="stack.kz_server"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_kz_server"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_kz_server"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_STACKPREFIX}_kafka_secrets_volume,\
${DOLLAR}{VCW_STACK_STACKPREFIX}_kafka_data_volume,\
${DOLLAR}{VCW_STACK_STACKPREFIX}_zookeeper_secrets_volume,\
${DOLLAR}{VCW_STACK_STACKPREFIX}_zookeeper_data_volume,\
${DOLLAR}{VCW_STACK_STACKPREFIX}_zookeeper_log_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='$VCW_STACK_GLOBAL_VOLUMES,$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_STACK_STACKS='vcwc/confluent/server,vcwc/confluent/zookeeper'
export VCW_STACK_GLOBAL_STACK_STACKNAMES="vcw_stack_kafka,vcw_stack_zookeeper"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_kafka_secrets_volume: { external: true },${DOLLAR}{VCW_STACK_STACKPREFIX}_kafka_data_volume: { external: true },${DOLLAR}{VCW_STACK_STACKPREFIX}_zookeeper_secrets_volume: { external: true },${DOLLAR}{VCW_STACK_STACKPREFIX}_zookeeper_data_volume: { external: true },${DOLLAR}{VCW_STACK_STACKPREFIX}_zookeeper_log_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export VCW_STACK_KZ_SERVER_KAFKA_KAFKA_ADVERTISED_LISTENERS=",HOST://localhost:29092"
export VCW_STACK_KZ_SERVER_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=",HOST:PLAINTEXT"
export VCW_STACK_KZ_SERVER_KAFKA_PORTS="29092:29092"
export VCW_STACK_KZ_SERVER_KAFKA_DEPLOY_RESOURCES_LIMITS_MEMORY="1536m"
export VCW_STACK_KZ_SERVER_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="1024m"
# END SETTINGS kafka.base

# START SETTINGS zookeeper.base
export VCW_STACK_KZ_SERVER_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export VCW_STACK_KZ_SERVER_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS zookeeper.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

