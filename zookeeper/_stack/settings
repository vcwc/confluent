#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS='zookeeper.base'
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_zookeeper"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_zookeeper"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_secrets_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_data_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_log_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_ZOOKEEPER_ENVIRONMENT,\
$VCW_STACK_ZOOKEEPER_COMMAND,\
$VCW_STACK_ZOOKEEPER_PORTS,\
$VCW_STACK_ZOOKEEPER_VOLUMES,\
$VCW_STACK_ZOOKEEPER_NETWORKS,\
$VCW_STACK_ZOOKEEPER_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="zookeeper"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/cp-zookeeper"
export VCW_STACK_ZOOKEEPER_ENVIRONMENT="'ZOOKEEPER_CLIENT_PORT=2181','ZOOKEEPER_TICK_TIME=2000'"
export VCW_STACK_ZOOKEEPER_COMMAND=
export VCW_STACK_ZOOKEEPER_PORTS=
export VCW_STACK_ZOOKEEPER_VOLUMES="\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_secrets_volume:/etc/zookeeper/secrets',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_data_volume:/var/lib/zookeeper/data',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_log_volume:/var/lib/zookeeper/log'"
export VCW_STACK_ZOOKEEPER_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_ZOOKEEPER_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_VOLUMES="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_secrets_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_data_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_log_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS zookeeper.base
export VCW_STACK_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export VCW_STACK_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS zookeeper.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
