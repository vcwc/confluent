#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/confluent/schema_registry/sasl"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_schema_registry"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_schema_registry"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry_secrets_volume"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT,\
$VCW_STACK_SCHEMA_REGISTRY_COMMAND,\
$VCW_STACK_SCHEMA_REGISTRY_VOLUMES,\
$VCW_STACK_SCHEMA_REGISTRY_NETWORKS,\
$VCW_STACK_SCHEMA_REGISTRY_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="schema_registry"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/cp-schema-registry"
export VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT="\
'SCHEMA_REGISTRY_HOST_NAME=schema_registry', \
'SCHEMA_REGISTRY_LISTENERS=http://0.0.0.0:8085', \
'SCHEMA_REGISTRY_KAFKASTORE_SSL_ENDPOINT_IDENTIFIED_ALGORITHM=https', \
'SCHEMA_REGISTRY_KAFKASTORE_SECURITY_PROTOCOL=SASL_SSL', \
'SCHEMA_REGISTRY_KAFKASTORE_BOOTSTRAP_SERVERS=${DOLLAR}{VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_CLOUD_BOOTSTRAP_SERVERS}',\
'SCHEMA_REGISTRY_KAFKASTORE_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username=\"${DOLLAR}{VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY}\" password=\"${DOLLAR}{VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET}\";',\
'SCHEMA_REGISTRY_KAFKASTORE_SASL_MECHANISM=PLAIN'"
export VCW_STACK_SCHEMA_REGISTRY_COMMAND=
export VCW_STACK_SCHEMA_REGISTRY_VOLUMES="'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry_secrets_volume:/etc/schema-registry/secrets'"
export VCW_STACK_SCHEMA_REGISTRY_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_SCHEMA_REGISTRY_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_schema_registry_secrets_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS schema_registry.base
#export VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_CONNECT_CLOUD_BOOTSTRAP_SERVERS=
#export VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_CONNECT_SASL_JAAS_CONFIG_CLUSTER_API_KEY=
#export VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_CONNECT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET=
export VCW_STACK_SCHEMA_REGISTRY_MODULE_SCHEMA_REGISTRY_PORT="8081"
export VCW_STACK_SCHEMA_REGISTRY_PORTS="${VCW_STACK_SCHEMA_REGISTRY_MODULE_SCHEMA_REGISTRY_PORT}:8081"
export VCW_STACK_SCHEMA_REGISTRY_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export VCW_STACK_SCHEMA_REGISTRY_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS schema_registry.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

# EXTERNAL ENVIRONMENT VARIABLES
# ==============================
# VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_CLOUD_BOOTSTRAP_SERVERS
# VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_KEY
# VCW_STACK_SCHEMA_REGISTRY_ENVIRONMENT_SASL_JAAS_CONFIG_CLUSTER_API_SECRET
