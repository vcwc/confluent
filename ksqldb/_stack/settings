#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="ksqldb_server.base"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_ksql_server"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_ksql_server"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_STACKPREFIX}_ksql_server_queries_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_KSQL_SERVER_ENVIRONMENT,\
$VCW_STACK_KSQL_SERVER_COMMAND,\
$VCW_STACK_KSQL_SERVER_VOLUMES,\
$VCW_STACK_KSQL_SERVER_NETWORKS,\
$VCW_STACK_KSQL_SERVER_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="ksqldb"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/ksqldb-server"
export VCW_STACK_KSQL_SERVER_ENVIRONMENT="\
'KSQL_BOOTSTRAP_SERVERS=${DOLLAR}{VCW_STACK_KSQL_SERVER_KSQL_BOOTSTRAP_SERVERS}',\
'KSQL_KSQL_LOGGING_PROCESSING_STREAM_AUTO_CREATE=true',\
'KSQL_KSQL_LOGGING_PROCESSING_TOPIC_AUTO_CREATE=true',\
'KSQL_KSQL_SERVICE_ID=${DOLLAR}{VCW_STACK_KSQL_SERVER_KSQL_KSQL_SERVICE_ID}'\
${DOLLAR}{VCW_STACK_KSQL_SERVER_MODE}"
export VCW_STACK_KSQL_SERVER_COMMAND=
export VCW_STACK_KSQL_SERVER_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_ksql_server_queries_volume:/conteco/pwd"
export VCW_STACK_KSQL_SERVER_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay"
export VCW_STACK_KSQL_SERVER_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_ksql_server_queries_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS ksql_server.base
export VCW_STACK_KSQL_SERVER_KSQL_BOOTSTRAP_SERVERS="kafka:9092"
export VCW_STACK_KSQL_SERVER_KSQL_KSQL_SERVICE_ID="${VCW_STACK_STACKPREFIX}"

export VCW_STACK_KSQL_SERVER_MODE=",'KSQL_LISTENERS=http://0.0.0.0:8088','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export VCW_STACK_KSQL_SERVER_CONSOLE=",'KSQL_LISTENERS=http://0.0.0.0:8088','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export VCW_STACK_KSQL_SERVER_HEADLESS=",'KSQL_KSQL_QUERIES_FILE=','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"

export VCW_STACK_KSQL_SERVER_PORTS="8088:8088"
export VCW_STACK_KSQL_SERVER_DEPLOY_RESOURCES_LIMITS_MEMORY="1536m"
export VCW_STACK_KSQL_SERVER_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="1024m"
# END SETTINGS ksql_server.base
