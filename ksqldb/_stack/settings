#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/confluent/ksqldb"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_ksqldb"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_ksqldb"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb_queries_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb_queries_volume:/vcw/pwd"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_KSQLDB_ENVIRONMENT,\
$VCW_STACK_KSQLDB_COMMAND,\
$VCW_STACK_KSQLDB_VOLUMES,\
$VCW_STACK_KSQLDB_NETWORKS,\
$VCW_STACK_KSQLDB_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="ksqldb"
export VCW_STACK_GLOBAL_IMAGE_NAME="confluentinc/ksql-server"
export VCW_STACK_KSQLDB_ENVIRONMENT="\
'KSQL_BOOTSTRAP_SERVERS=${DOLLAR}{VCW_STACK_KSQLDB_MODULE_BOOTSTRAP_SERVERS}',\
'KSQL_KSQL_LOGGING_PROCESSING_STREAM_AUTO_CREATE=true',\
'KSQL_KSQL_LOGGING_PROCESSING_TOPIC_AUTO_CREATE=true',\
'KSQL_KSQL_SERVICE_ID=${DOLLAR}{VCW_STACK_KSQLDB_MODULE_KSQL_SERVICE_ID}'\
${DOLLAR}{VCW_STACK_KSQLDB_MODE}"
export VCW_STACK_KSQLDB_COMMAND=
export VCW_STACK_KSQLDB_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksql_server_queries_volume:/vcw/pwd"
export VCW_STACK_KSQLDB_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_KSQLDB_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ksql_server_queries_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START MODULE SETTINGS
# END MODULE SETTINGS

# START SETTINGS ksql_server.base
export VCW_STACK_KSQLDB_MODULE_BOOTSTRAP_SERVERS="kafka:9092"
export VCW_STACK_KSQLDB_MODULE_KSQL_SERVICE_ID="${VCW_STACK_GLOBAL_STACKPREFIX}"

export VCW_STACK_KSQLDB_MODE=",'KSQL_LISTENERS=http://0.0.0.0:8088','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export VCW_STACK_KSQLDB_CONSOLE=",'KSQL_LISTENERS=http://0.0.0.0:8088','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export VCW_STACK_KSQLDB_HEADLESS=",'KSQL_KSQL_QUERIES_FILE=','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"

export VCW_STACK_KSQLDB_MODULE_KSQLDB_PORT="8088"
export VCW_STACK_KSQLDB_PORTS="${VCW_STACK_KSQLDB_MODULE_KSQLDB_PORT}:8088"
export VCW_STACK_KSQLDB_DEPLOY_RESOURCES_LIMITS_MEMORY="1536m"
export VCW_STACK_KSQLDB_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="1024m"
# END SETTINGS ksql_server.base
