#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/confluent/kafka/kz"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_kz"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_kz"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_secrets_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_data_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_secrets_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_data_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_log_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='$VCW_STACK_GLOBAL_VOLUMES,$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_STACK_STACKS='vcwc/confluent/kafka,vcwc/confluent/zookeeper'
export VCW_STACK_GLOBAL_STACK_STACKNAMES="vcw_stack_kafka,vcw_stack_zookeeper"
export VCW_STACK_GLOBAL_VOLUMES="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_secrets_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_kafka_data_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_secrets_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_data_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_zookeeper_log_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export VCW_STACK_KZ_KAFKA_KAFKA_ADVERTISED_LISTENERS=",PLAINTEXT_HOST://${VCW_STACK_KZ_HOSTNAME}:29092"
export VCW_STACK_KZ_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=",PLAINTEXT_HOST:PLAINTEXT"
export VCW_STACK_KZ_KAFKA_MODULE_KAFKA_PORT="29092"
export VCW_STACK_KZ_KAFKA_PORTS="${VCW_STACK_KZ_KAFKA_MODULE_KAFKA_PORT}:29092"
export VCW_STACK_KZ_KAFKA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export VCW_STACK_KZ_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka.base

# START SETTINGS zookeeper.base
export VCW_STACK_KZ_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export VCW_STACK_KZ_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS zookeeper.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

